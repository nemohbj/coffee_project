@charset"utf-8";

body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,form,fieldset,p,blockquote,button,th,td,textarea,input{margin:0;padding:0;-webkit-text-size-adjust: none;}
hr, legend {display:none;}
img, fieldset {border:0 none;}
body, h1, h2, h3, h4, h5, dl, dt, dd, th, td, p, form, fieldset, legend, input, div{font-family:"Malgun Gothic",'맑은 고딕', Dotum;letter-spacing:-1px}
ul, ol, li {list-style:none outside;}
img, input, select, textarea, label{vertical-align:middle;}
a{color:#4d4c4c}
a:link{text-decoration:none}

